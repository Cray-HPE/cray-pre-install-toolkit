#!ipxe

dhcp

# Change this to any available URL.
set base-url http://cray-livecd.local

# If using a custom image or URL, modify this.
set image-name ncn.squashfs

# Modify these, or the actual kernel line below, to customize boot params.
set kernel-params ip=dhcp root=live:${base-url}/${image-name} rootfstype=squashfs modules=squashfs

kernel ${base-url}/linux ${kernel-params}
initrd ${base-url}/initrd

boot
